<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam.convert1012wear">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".MainActivityWear"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConvertUnitsLength"
            android:label="@string/string_length"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsArea"
            android:label="@string/string_area"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsSpeed"
            android:label="@string/string_speed"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsStorage"
            android:label="@string/string_storage_short"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsTemp"
            android:label="@string/string_temp"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsTime"
            android:label="@string/string_time"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsVolume"
            android:label="@string/string_volume"
            android:parentActivityName=".MainActivityWear" />
        <activity
            android:name=".ConvertUnitsWeight"
            android:label="@string/string_weight"
            android:parentActivityName=".MainActivityWear" />
    </application>

</manifest>