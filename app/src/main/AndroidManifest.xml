<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.sebmerkt.everydayconverter"
    android:versionCode="500010000"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_color"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_color_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.github.sebmerkt.everydayconverter.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConversionTable"
            android:label="@string/string_unit_description"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsLength"
            android:label="@string/string_length"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsTime"
            android:label="@string/string_time"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsArea"
            android:label="@string/string_area"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsTemp"
            android:label="@string/string_temperature"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsVolume"
            android:label="@string/string_volume"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsSpeed"
            android:label="@string/string_speed"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsWeight"
            android:label="@string/string_weight"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConvertUnitsStorage"
            android:label="@string/string_storage"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity" />
        <activity
            android:name="io.github.sebmerkt.everydayconverter.SettingsActivity"
            android:label="@string/string_settings"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.sebmerkt.everydayconverter.MainActivity" />
        </activity>
        <activity
            android:name="io.github.sebmerkt.everydayconverter.ConversionTableInfo"
            android:label="@string/string_title_activity_info"
            android:parentActivityName="io.github.sebmerkt.everydayconverter.ConversionTable">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.sebmerkt.everydayconverter.ConversionTable" />
        </activity>
    </application>

</manifest>