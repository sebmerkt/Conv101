<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sam.convert101.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_length"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_length_ruler_foreground"
                    android:text="@string/string_length"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_launcher_foreground"
                    android:text="@string/string_area"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_launcher_foreground"
                    android:text="@string/string_volume"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_time_clock_foreground"
                    android:text="@string/string_time"
                    android:elevation="50dp"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_launcher_foreground"
                    android:text="@string/string_speed"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/white"
                    android:drawableTop="@drawable/ic_launcher_foreground"
                    android:text="@string/string_temperature"
                    android:textColor="@color/white" />

            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>
